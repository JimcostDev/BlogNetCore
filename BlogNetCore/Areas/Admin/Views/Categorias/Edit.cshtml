@model BlogNetCore.Models.Categoria
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h3 class="text-center">Editar  categoría</h3>
<hr />
<form asp-action="Edit" method="post">

    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <!--ENVIAR ID COMO CAMPO OCULTO-->
        <input type="hidden" asp-for="Id" />
        <div class="col-10 offset-1 mt-4">
            <!--******************************** NOMBRE CATEGORÍA **********************************************-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nombre" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <!--************************************** ORDEN DE VISUALIZACIÓN ****************************************-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Orden" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Orden" class="form-control" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>
            <!--**************************************** BTN **************************************-->
            <div class="form-group row">
                <div class="col-8 offset-4">

                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">Actualizar</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Volver a la lista</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>