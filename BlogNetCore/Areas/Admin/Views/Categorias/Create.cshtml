@model BlogNetCore.Models.Categoria

@{
    ViewData["Title"] = "Crear categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h3 class="text-center">Crear una nueva categoría</h3>
<hr />
<form asp-action="Create" method="post">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <!--********************************NOMBRE CATEGORÍA**********************************************-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nombre" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <!--**************************************ORDEN DE VISUALIZACIÓN****************************************-->
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Orden" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Orden" class="form-control" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>
            <!--****************************************CREAR_VOLVER_BTN**************************************-->
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>
        </div>
    </div>
</form>



