
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de artículos</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-outline-primary"><i class="fas fa-plus"></i> Crear nuevo artículo</a>
        </div>
    </div>
    <br />
    @*tabla de artículos*@
    <table id="tblArticulos" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>NOMBRE</th>
                <th>CATEGORÍA</th>
                <th>FECHA DE CREACIÓN</th>
                <th></th>
            </tr>
        </thead>

    </table>
</div>
@section Scripts{
    <script src="~/js/articulo.js"></script>
}


